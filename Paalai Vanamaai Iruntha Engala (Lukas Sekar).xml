<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2022-09-24T06:25:32">
  <properties>
    <titles>
      <title>Paalai Vanamaai Iruntha Engala</title>
      <title>Paalai Vanamaai Iruntha Engala</title>
    </titles>
    <verseOrder>c1 v1 c1 v2 c1 v3 c1</verseOrder>
    <authors>
      <author type="words">Lukas Sekar</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="c1">
      <lines>பாலைவனமாய் இருந்த எங்களை<br/>சோலைவனமாய் மாற்றினீரய்யா</lines>
    </verse>
    <verse name="v1">
      <lines><br/>அறுந்த கொடியைப் போலிருந்தோமே<br/>எங்களை செடியோடே இணைத்துவிட்டீரே</lines>
    </verse>
    <verse name="v2">
      <lines><br/>கண்ணீரிலே மூழ்கியிருந்தோமே<br/>எங்களை களிப்பாக மாற்றினீரையா</lines>
    </verse>
    <verse name="v3">
      <lines><br/>வறண்ட நிலத்தைப் போலிருந்தோமே<br/>எங்களை வயல்வெளியாய்<br/>மாற்றினீரையா</lines>
    </verse>
  </lyrics>
</song>
